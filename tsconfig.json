{
  "compilerOptions": {
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src/types/base"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "module": "es6",
    "rootDir": "src",
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types",
        "./src/types/express.d.ts"
      ]
    }
  }
}
